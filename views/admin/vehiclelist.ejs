<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vehicle List - Driven Admin</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: 'Quicksand', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .maindiv {
            display: flex;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            overflow: hidden;
            min-height: 100vh;
        }

        .navbar {
            width: 99%;
        }

        .mainpage {
            position: absolute;
            top: 62px;
            left: 16.5%;
            width: 83%;
            height: calc(99.6vh - 62px);
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 25px 0px 12px 0px;
            overflow-y: auto;
            padding: 40px 30px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.3);
            transition: all 0.3s ease-in-out;
        }

        .mainpage::-webkit-scrollbar {
            width: 8px;
        }

        .mainpage::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 4px;
        }

        .mainpage::-webkit-scrollbar-thumb {
            background: rgba(102, 126, 234, 0.3);
            border-radius: 4px;
        }

        .mainpage::-webkit-scrollbar-thumb:hover {
            background: rgba(102, 126, 234, 0.5);
        }

        /* Page Header */
        .page-header {
            text-align: center;
            margin-bottom: 40px;
            padding-bottom: 25px;
            border-bottom: 2px solid rgba(102, 126, 234, 0.1);
        }

        .page-title {
            font-size: clamp(24px, 4vw, 36px);
            font-weight: 700;
            color: #2d3748;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
        }

        .page-subtitle {
            color: #718096;
            font-size: 16px;
            font-weight: 500;
        }

        .stats-bar {
            display: flex;
            justify-content: center;
            gap: 30px;
            margin: 20px 0;
            flex-wrap: wrap;
        }

        .stat-item {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 12px 20px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 14px;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }

        /* Vehicle Cards */
        .vehicles-container {
            display: flex;
            flex-direction: column;
            gap: 25px;
        }

        .card-container {
            display: flex;
            gap: 25px;
            background: rgba(204, 199, 199, 0.9);
            backdrop-filter: blur(15px);
            border-radius: 20px;
            padding: 25px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.3);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            align-items: center;
            
            animation: fadeInUp 0.6s ease forwards;
        }

        .card-container:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }

        /* Vehicle Image */
        .vehicle-image {
            flex: 0 0 280px;
            position: relative;
        }

        .vehicle-image img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

        .card-container:hover .vehicle-image img {
            transform: scale(1.05);
        }

        .availability-badge {
            position: absolute;
            top: 15px;
            left: 15px;
            padding: 6px 12px;
            border-radius: 15px;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            background: linear-gradient(135deg, #48bb78, #38a169);
            color: white;
        }

        /* Vehicle Details */
        .vehicle-details {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .vehicle-title {
            font-size: 22px;
            font-weight: 700;
            color: #2d3748;
            margin-bottom: 8px;
        }

        .details-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 12px;
        }

        .detail-item {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 15px;
            color: #4a5568;
        }

        .detail-label {
            font-weight: 600;
            color: #2d3748;
            min-width: 80px;
        }

        .detail-value {
            color: #667eea;
            font-weight: 500;
        }

        .detail-item i {
            color: #667eea;
            width: 16px;
            text-align: center;
        }

        /* Action Buttons */
        .action-buttons {
            flex: 0 0 auto;
            display: flex;
            flex-direction: column;
            gap: 12px;
            align-items: center;
        }

        .edit-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, #48bb78, #38a169);
            color: white;
            text-decoration: none;
            border-radius: 15px;
            font-size: 18px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(72, 187, 120, 0.3);
        }

        .edit-btn:hover {
            background: linear-gradient(135deg, #38a169, #2f855a);
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(72, 187, 120, 0.4);
        }

        /* Delete Dropdown */
        .dropdown1 {
            position: relative;
            display: inline-block;
        }

        .delete-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, #e53e3e, #c53030);
            color: white;
            border: none;
            border-radius: 15px;
            font-size: 18px;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(229, 62, 62, 0.3);
        }

        .delete-btn:hover {
            background: linear-gradient(135deg, #c53030, #9c2626);
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(229, 62, 62, 0.4);
        }

        .dropdown-content1 {
            display: none;
            position: absolute;
            top: 60px;
            right: 0;
            background: white;
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            min-width: 250px;
            z-index: 1000;
            border: 1px solid rgba(0, 0, 0, 0.1);
            animation: slideDown 0.3s ease;
        }

        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .dropdown1:hover .dropdown-content1 {
            display: block;
        }

        .delete-confirmation {
            text-align: center;
        }

        .delete-confirmation p {
            font-size: 14px;
            color: #4a5568;
            margin-bottom: 15px;
            font-weight: 500;
        }

        .confirmation-buttons {
            display: flex;
            gap: 10px;
            justify-content: center;
        }

        .confirm-btn {
            padding: 8px 16px;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .confirm-yes {
            background: linear-gradient(135deg, #e53e3e, #c53030);
            color: white;
        }

        .confirm-yes:hover {
            background: linear-gradient(135deg, #c53030, #9c2626);
            transform: translateY(-2px);
        }

        .confirm-no {
            background: linear-gradient(135deg, #718096, #4a5568);
            color: white;
            text-decoration: none;
            display: inline-block;
        }

        .confirm-no:hover {
            background: linear-gradient(135deg, #4a5568, #2d3748);
            transform: translateY(-2px);
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 80px 20px;
            color: #718096;
        }

        .empty-state i {
            font-size: 64px;
            color: #cbd5e0;
            margin-bottom: 20px;
        }

        .empty-state h3 {
            font-size: 24px;
            margin-bottom: 10px;
            color: #4a5568;
        }

        /* Responsive Design */
        @media (max-width: 1200px) {
            .mainpage {
                left: 20%;
                width: 78%;
                padding: 30px 25px;
            }

            .card-container {
                gap: 20px;
            }

            .vehicle-image {
                flex: 0 0 240px;
            }
        }

        @media (max-width: 1024px) {
            .mainpage {
                left: 5%;
                width: 93%;
                padding: 25px 20px;
            }

            .card-container {
                gap: 15px;
            }

            .vehicle-image {
                flex: 0 0 200px;
            }

            .vehicle-image img {
                height: 160px;
            }
        }

        @media (max-width: 768px) {
            .mainpage {
                left: 0;
                width: 100%;
                padding: 20px 15px;
                border-radius: 0;
            }

            .card-container {
                flex-direction: column;
                text-align: center;
                gap: 20px;
                align-items: center;
            }

            .vehicle-image {
                flex: none;
                width: 100%;
                max-width: 350px;
            }

            .vehicle-image img {
                width: 100%;
                height: 220px;
            }

            .vehicle-details {
                width: 100%;
                text-align: center;
            }

            .details-grid {
                grid-template-columns: 1fr;
                gap: 8px;
            }

            .detail-item {
                justify-content: center;
            }

            .action-buttons {
                flex-direction: row;
                gap: 20px;
            }

            .stats-bar {
                gap: 15px;
            }

            .stat-item {
                font-size: 12px;
                padding: 10px 15px;
            }

            .dropdown-content1 {
                right: 50%;
                transform: translateX(50%);
                min-width: 200px;
            }
        }

        @media (max-width: 480px) {
            .mainpage {
                padding: 15px 10px;
            }

            .card-container {
                padding: 20px 15px;
                gap: 15px;
            }

            .vehicle-image img {
                height: 180px;
            }

            .vehicle-title {
                font-size: 18px;
            }

            .detail-item {
                font-size: 14px;
            }

            .edit-btn,
            .delete-btn {
                width: 45px;
                height: 45px;
                font-size: 16px;
            }

            .stats-bar {
                flex-direction: column;
                align-items: center;
                gap: 10px;
            }

            .dropdown-content1 {
                min-width: 180px;
                padding: 15px;
            }
        }

        @media (max-width: 320px) {
            .mainpage {
                padding: 10px 8px;
            }

            .card-container {
                padding: 15px 10px;
            }

            .vehicle-image img {
                height: 160px;
            }

            .action-buttons {
                gap: 15px;
            }
        }
    </style>
</head>

<body>
    <div class="maindiv">
        <div class="navbar">
            <%- include('../partials/navbar') %>
        </div>
        
        <div class="mainpage">
            <div class="page-header">
                <h1 class="page-title">
                    <i class="fas fa-car"></i>
                    Vehicle Fleet Management
                </h1>
                <p class="page-subtitle">Manage and monitor your vehicle inventory</p>
                
                <div class="stats-bar">
                    <div class="stat-item">
                        <i class="fas fa-car"></i>
                        Total Vehicles: <%= vehicle.length %>
                    </div>
                    <div class="stat-item">
                        <i class="fas fa-check-circle"></i>
                        Available: <%= vehicle.filter(v => v.available === 'Available').length %>
                    </div>
                    
                </div>
            </div>

            <div class="vehicles-container">
                <% if (vehicle && vehicle.length > 0) { %>
                    <% vehicle.forEach((v, i) => { %>
                        <div class="card-container" style=`animation-delay: <%= i * 0.1 %>s;`>
                            <div class="vehicle-image">
                                <% if (v.images && v.images.length > 0) { %>
                                    <img src="<%= v.images[0] %>" alt="<%= v.brand %> <%= v.name %>">
                                <% } else { %>
                                    <img src="/no-image.png" alt="No Image Available">
                                <% } %>
                                <div class="availability-badge">
                                    <%= v.available || 'Available' %>
                                </div>
                            </div>

                            <div class="vehicle-details">
                                <h3 class="vehicle-title"><%= v.brand %> <%= v.name %></h3>
                                
                                <div class="details-grid">
                                    <div class="detail-item">
                                        <i class="fas fa-calendar"></i>
                                        <span class="detail-label">Year:</span>
                                        <span class="detail-value"><%= v.year %></span>
                                    </div>
                                    <div class="detail-item">
                                        <i class="fas fa-gas-pump"></i>
                                        <span class="detail-label">Fuel:</span>
                                        <span class="detail-value"><%= v.fuel %></span>
                                    </div>
                                    <div class="detail-item">
                                        <i class="fas fa-hashtag"></i>
                                        <span class="detail-label">Vehicle No:</span>
                                        <span class="detail-value"><%= v.vehiclenumber %></span>
                                    </div>
                                    <div class="detail-item">
                                        <i class="fas fa-rupee-sign"></i>
                                        <span class="detail-label">Price:</span>
                                        <span class="detail-value">₹<%= v.price %>/day</span>
                                    </div>
                                    <div class="detail-item">
                                        <i class="fas fa-users"></i>
                                        <span class="detail-label">Seating:</span>
                                        <span class="detail-value"><%= v.seating || 'N/A' %> seats</span>
                                    </div>
                                    <div class="detail-item">
                                        <i class="fas fa-map-marker-alt"></i>
                                        <span class="detail-label">Location:</span>
                                        <span class="detail-value"><%= v.location || 'All Locations' %></span>
                                    </div>
                                </div>
                            </div>

                            <div class="action-buttons">
                                <a href="/admin/editvehicle/<%= v._id %>" class="edit-btn" title="Edit Vehicle">
                                    <i class="fas fa-edit"></i>
                                </a>
                                
                                <div class="dropdown1">
                                    <button class="delete-btn" title="Delete Vehicle">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                    <div class="dropdown-content1">
                                        <div class="delete-confirmation">
                                            <p>Are you sure you want to delete this vehicle?</p>
                                            <div class="confirmation-buttons">
                                                <form action="/admin/delete/<%= v._id %>" method="POST" style="display: inline;">
                                                    <input type="hidden" name="id" value="<%= v._id %>">
                                                    <button type="submit" class="confirm-btn confirm-yes">
                                                        <i class="fas fa-check"></i> Yes
                                                    </button>
                                                </form>
                                                <button type="button" class="confirm-btn confirm-no" onclick="closeDropdown(this)">
                                                    <i class="fas fa-times"></i> No
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="empty-state">
                        <i class="fas fa-car"></i>
                        <h3>No Vehicles Found</h3>
                        <p>Start by adding your first vehicle to the fleet.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script>
        // Close dropdown when clicking No
        function closeDropdown(button) {
            const dropdown = button.closest('.dropdown1');
            const dropdownContent = dropdown.querySelector('.dropdown-content1');
            dropdownContent.style.display = 'none';
        }

        // Close dropdowns when clicking outside
        document.addEventListener('click', function(event) {
            const dropdowns = document.querySelectorAll('.dropdown-content1');
            dropdowns.forEach(dropdown => {
                if (!dropdown.closest('.dropdown1').contains(event.target)) {
                    dropdown.style.display = 'none';
                }
            });
        });

        // Animate cards on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        // Observe all vehicle cards
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.card-container');
            cards.forEach(card => {
                observer.observe(card);
            });
        });
    </script>
</body>

</html>
