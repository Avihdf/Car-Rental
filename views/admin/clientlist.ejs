<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Client List - Driven Admin</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: 'Quicksand', sans-serif;
            background: white;
        }

        .maindiv {
            display: flex;
            position: relative;
            width: 100%;
            min-height: 100vh;
        }

        .navbar {
            width: 16.5%;
            position: fixed;
            height: 100%;
        }

        .mainpage {
            position: absolute;
            top: 61px;
            left: 16.5%;
            width: calc(83.5%);
            background: rgba(199, 194, 194, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 0 0 0 0;
            overflow-y: auto;
            padding: 40px 30px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.3);
            transition: all 0.3s ease-in-out;
            min-height: calc(100vh - 62px);
        }

        .mainpage::-webkit-scrollbar {
            width: 8px;
        }

        .mainpage::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 4px;
        }

        .mainpage::-webkit-scrollbar-thumb {
            background: rgba(102, 126, 234, 0.3);
            border-radius: 4px;
        }

        .mainpage::-webkit-scrollbar-thumb:hover {
            background: rgba(102, 126, 234, 0.5);
        }

        /* Page Header */
        .page-header {
            text-align: center;
            margin-bottom: 40px;
            padding-bottom: 25px;
            border-bottom: 2px solid rgba(102, 126, 234, 0.1);
        }

        .page-title {
            font-size: clamp(24px, 4vw, 36px);
            font-weight: 700;
            color: #2d3748;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
        }

        .page-subtitle {
            color: #718096;
            font-size: 16px;
            font-weight: 500;
        }

        .client-stats {
            display: flex;
            justify-content: center;
            gap: 30px;
            margin: 20px 0;
            flex-wrap: wrap;
        }

        .stat-item {
            background: linear-gradient(135deg, #e4e5e9, #141414);
            color: white;
            padding: 12px 20px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 14px;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }

        /* Table Container */
        .table-container {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(15px);
            border-radius: 10px;
            margin-top: -25px;
            padding: 25px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.3);
            overflow: hidden;
        }

        .table-wrapper {
            width: 100%;
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: transparent;
            font-size: 15px;
        }

        thead th {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 18px 15px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            text-align: center;
            font-size: 14px;
            border: none;
        }

        thead th:first-child {
            border-radius: 15px 0 0 0;
        }

        thead th:last-child {
            border-radius: 0 15px 0 0;
        }

        tbody td {
            padding: 18px 15px;
            border-bottom: 1px solid rgba(102, 126, 234, 0.1);
            text-align: center;
            color: #4a5568;
            word-break: break-word;
            transition: all 0.3s ease;
        }

        tbody tr:nth-child(even) {
            background-color: rgba(102, 126, 234, 0.03);
        }

        tbody tr:hover {
            background-color: rgba(102, 126, 234, 0.08);
            transform: scale(1.01);
        }

        tbody tr:last-child td {
            border-bottom: none;
        }

        tbody tr:last-child td:first-child {
            border-radius: 0 0 0 15px;
        }

        tbody tr:last-child td:last-child {
            border-radius: 0 0 15px 0;
        }

        /* Delete Action */
        .dropdown1 {
            position: relative;
            display: inline-block;
        }

        .delete-btn {
            width: 40px;
            height: 40px;
            border: none;
            border-radius: 12px;
            background: linear-gradient(135deg, #e53e3e, #c53030);
            color: white;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .delete-btn:hover {
            background: linear-gradient(135deg, #c53030, #9c2626);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(229, 62, 62, 0.4);
        }

        .dropdown-content1 {
            display: none;
            position: absolute;
            top: 20px;
            right: -20px;
            background: white;
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            min-width: 220px;
           
            border: 1px solid rgba(0, 0, 0, 0.1);
            animation: slideDown 0.3s ease;
        }

        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .dropdown1:hover .dropdown-content1 {
            display: block;
        }

        .delete-confirmation {
            text-align: center;
        }

        .delete-confirmation p {
            font-size: 14px;
            color: #4a5568;
            margin-bottom: 15px;
            font-weight: 500;
        }

        .confirmation-buttons {
            display: flex;
            gap: 10px;
            justify-content: center;
        }

        .confirm-btn {
            padding: 8px 16px;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .confirm-yes {
            background: linear-gradient(135deg, #e53e3e, #c53030);
            color: white;
        }

        .confirm-yes:hover {
            background: linear-gradient(135deg, #c53030, #9c2626);
            transform: translateY(-2px);
        }

        .confirm-no {
            background: linear-gradient(135deg, #718096, #4a5568);
            color: white;
        }

        .confirm-no:hover {
            background: linear-gradient(135deg, #4a5568, #2d3748);
            transform: translateY(-2px);
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 80px 20px;
            color: #718096;
        }

        .empty-state i {
            font-size: 64px;
            color: #cbd5e0;
            margin-bottom: 20px;
        }

        .empty-state h3 {
            font-size: 24px;
            margin-bottom: 10px;
            color: #4a5568;
        }

        /* Responsive Design */
        @media (max-width: 1200px) {
            .mainpage {
                left: 20%;
                width: calc(78% - 20px);
                padding: 30px 25px;
            }
        }

        @media (max-width: 1024px) {
            .mainpage {
                left: 5%;
                width: calc(93% - 20px);
                padding: 25px 20px;
            }

            .client-stats {
                gap: 20px;
            }

            .stat-item {
                font-size: 12px;
                padding: 10px 15px;
            }
        }

        @media (max-width: 768px) {
            .mainpage {
                left: 0;
                width: calc(100% - 20px);
                border-radius: 0;
                padding: 20px 15px;
                top: 62px;
                min-height: calc(100vh - 82px);
            }

            .client-stats {
                flex-direction: column;
                align-items: center;
                gap: 10px;
            }

            table {
                font-size: 14px;
            }

            thead th {
                padding: 15px 10px;
                font-size: 12px;
            }

            tbody td {
                padding: 15px 10px;
            }

            .dropdown-content1 {
                right: 50%;
                transform: translateX(50%);
                min-width: 180px;
            }
        }

        /* Mobile Card Layout */
        @media (max-width: 600px) {
            .table-wrapper {
                overflow-x: hidden;
            }

            .table-container {
                padding: 15px;
            }

            table, thead, tbody, th, td, tr {
                display: block;
            }

            thead {
                display: none;
            }

            table {
                box-shadow: none;
            }

            tbody tr {
                margin-bottom: 20px;
                background: rgba(255, 255, 255, 0.9);
                border-radius: 15px;
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
                padding: 20px 15px;
                border: 1px solid rgba(102, 126, 234, 0.2);
                transform: none;
                transition: all 0.3s ease;
            }

            tbody tr:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
            }

            tbody td {
                text-align: right;
                padding: 12px 5px;
                border: none;
                border-bottom: 1px dashed rgba(102, 126, 234, 0.2);
                position: relative;
                padding-left: 50%;
                font-size: 14px;
                color: #2d3748;
            }

            tbody td:last-child {
                border-bottom: none;
                text-align: center;
                padding-left: 0;
                padding-top: 15px;
            }

            tbody td::before {
                content: attr(data-label);
                position: absolute;
                left: 10px;
                width: calc(50% - 20px);
                padding-right: 10px;
                font-weight: 600;
                color: #4a5568;
                text-align: left;
                font-size: 13px;
            }

            .dropdown-content1 {
                right: 50%;
                transform: translateX(50%);
                min-width: 200px;
            }
        }

        @media (max-width: 480px) {
            .mainpage {
                padding: 15px 10px;
            }

            .table-container {
                padding: 12px;
            }

            tbody tr {
                padding: 15px 12px;
                margin-bottom: 15px;
            }

            tbody td {
                padding: 10px 5px;
                font-size: 13px;
            }

            .delete-btn {
                width: 35px;
                height: 35px;
                font-size: 14px;
            }
        }

        /* Animation for table rows */
        tbody tr {
            animation: fadeInUp 0.6s ease forwards;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Stagger animation for rows */
        tbody tr:nth-child(1) { animation-delay: 0.1s; }
        tbody tr:nth-child(2) { animation-delay: 0.2s; }
        tbody tr:nth-child(3) { animation-delay: 0.3s; }
        tbody tr:nth-child(4) { animation-delay: 0.4s; }
        tbody tr:nth-child(5) { animation-delay: 0.5s; }
    </style>
</head>

<body>
    <div class="maindiv">
        <div class="navbar">
            <%- include('../partials/navbar') %>
        </div>

        <div class="mainpage">
            <div class="page-header">
                <h1 class="page-title">
                    <i class="fas fa-users"></i>
                    Client Management
                </h1>
                <p class="page-subtitle">Manage and monitor your registered customers</p>
                
                
            </div>

            <div class="table-container">
                <% if (user && user.length > 0) { %>
                    <div class="table-wrapper">
                        <table>
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>License Number</th>
                                    <th>Registration Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% user.forEach((client, i) => { %>
                                <tr style=`animation-delay: <%= i * 0.1 %>s;`>
                                    <td data-label="#"><%= i + 1 %></td>
                                    <td data-label="Name"><%= client.name %></td>
                                    <td data-label="Email"><%= client.email %></td>
                                    <td data-label="Phone"><%= client.number %></td>
                                    <td data-label="License No."><%= client.license %></td>
                                    <td data-label="Registered">
                                        <%= new Date(client.date).toLocaleString('en-IN', { 
                                            dateStyle: 'medium', 
                                            timeStyle: 'short' 
                                        }) %>
                                    </td>
                                    <td data-label="Action">
                                        <div class="dropdown1">
                                            <button class="delete-btn" title="Delete Client">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                            <div class="dropdown-content1">
                                                <div class="delete-confirmation">
                                                    <p>Are you sure you want to delete this client?</p>
                                                    <div class="confirmation-buttons">
                                                        <form action="/admin/Delete/<%= client._id %>" method="POST" style="display: inline;">
                                                            <input type="hidden" name="id" value="<%= client._id %>">
                                                            <button type="submit" class="confirm-btn confirm-yes">
                                                                <i class="fas fa-check"></i> Yes
                                                            </button>
                                                        </form>
                                                        <button type="button" class="confirm-btn confirm-no" onclick="closeDropdown(this)">
                                                            <i class="fas fa-times"></i> No
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="empty-state">
                        <i class="fas fa-users"></i>
                        <h3>No Clients Found</h3>
                        <p>No registered clients available at the moment.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script>
        // Close dropdown when clicking No
        function closeDropdown(button) {
            const dropdown = button.closest('.dropdown1');
            const dropdownContent = dropdown.querySelector('.dropdown-content1');
            dropdownContent.style.display = 'none';
        }

        // Close dropdowns when clicking outside
        document.addEventListener('click', function(event) {
            const dropdowns = document.querySelectorAll('.dropdown-content1');
            dropdowns.forEach(dropdown => {
                if (!dropdown.closest('.dropdown1').contains(event.target)) {
                    dropdown.style.display = 'none';
                }
            });
        });

        // Animate table rows on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        // Initialize animations
        document.addEventListener('DOMContentLoaded', function() {
            const rows = document.querySelectorAll('tbody tr');
            rows.forEach(row => {
                observer.observe(row);
            });

            // Add search functionality (optional)
            const searchInput = document.getElementById('searchInput');
            if (searchInput) {
                searchInput.addEventListener('input', function() {
                    const filter = this.value.toLowerCase();
                    const rows = document.querySelectorAll('tbody tr');
                    
                    rows.forEach(row => {
                        const text = row.textContent.toLowerCase();
                        row.style.display = text.includes(filter) ? '' : 'none';
                    });
                });
            }
        });
    </script>
</body>

</html>
