<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Driven</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: 'Quicksand', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .maindiv {
            display: flex;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            overflow: hidden;
            min-height: 100vh;
        }

        .navbar {
            width: 99%;
        }

        .mainpage {
            position: absolute;
            top: 62px;
            left: 16.5%;
            width: 82.4%;
            height: calc(99.6vh - 62px);
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 25px 0px 12px 0px;
            overflow-y: auto;
            padding: 40px 30px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.3);
            transition: all 0.3s ease-in-out;
        }

        .mainpage::-webkit-scrollbar {
            width: 8px;
        }

        .mainpage::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 4px;
        }

        .mainpage::-webkit-scrollbar-thumb {
            background: rgba(102, 126, 234, 0.3);
            border-radius: 4px;
        }

        .mainpage::-webkit-scrollbar-thumb:hover {
            background: rgba(102, 126, 234, 0.5);
        }

        /* Page Header */
        .page-header {
            text-align: center;
            margin-bottom: 40px;
            padding-bottom: 25px;
            border-bottom: 2px solid rgba(102, 126, 234, 0.1);
        }

        .page-title {
            font-size: clamp(24px, 4vw, 36px);
            font-weight: 700;
            color: #2d3748;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
        }

        .page-subtitle {
            color: #718096;
            font-size: 16px;
            font-weight: 500;
        }

        /* Dashboard Stats */
        .dashboard-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 25px;
            margin-top: 30px;
            animation: fadeInUp 0.8s ease-out;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(15px);
            padding: 25px;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.3);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            min-height: 140px;
            justify-content: center;
            position: relative;
            overflow: hidden;
        }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: var(--card-color);
            border-radius: 20px 20px 0 0;
        }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }

        .card-icon {
            font-size: 36px;
            margin-bottom: 15px;
            color: var(--card-color);
            transition: transform 0.3s ease;
        }

        .card:hover .card-icon {
            transform: scale(1.1);
        }

        .card-title {
            font-size: 14px;
            font-weight: 600;
            color: #718096;
            margin-bottom: 5px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .card-value {
            font-size: 24px;
            font-weight: 700;
            color: #2d3748;
            margin-bottom: 8px;
        }

        .card-subtitle {
            font-size: 16px;
            font-weight: 500;
            color: #4a5568;
        }

        /* Individual Card Styles */
        .users {
            --card-color: #36d1dc;
        }

        .vehicles {
            --card-color: #f7971e;
        }

        .bookings {
            --card-color: #f54ea2;
        }

        .revenue {
            --card-color: #3bb2b8;
        }

        .pending {
            --card-color: #ff9966;
        }

        .confirmed {
            --card-color: #48bb78;
        }

        .cancelled {
            --card-color: #e53e3e;
        }

        /* Quick Actions Section */
        .quick-actions {
            margin-top: 40px;
            padding-top: 30px;
            border-top: 2px solid rgba(102, 126, 234, 0.1);
        }

        .quick-actions-title {
            font-size: 20px;
            font-weight: 700;
            color: #2d3748;
            margin-bottom: 20px;
            text-align: center;
        }

        .actions-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
        }

        .action-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            padding: 15px 20px;
            background: rgb(12, 12, 12);
            color: white;
            text-decoration: none;
            border-radius: 12px;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .action-btn:hover {
            background: linear-gradient(135deg, #5a67d8, #667eea);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        }

        /* Responsive Design */
        @media (max-width: 1200px) {
            .mainpage {
                left: 20%;
                width: 78%;
                padding: 30px 25px;
            }

            .dashboard-container {
                grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
                gap: 20px;
            }
        }

        @media (max-width: 1024px) {
            .mainpage {
                left: 5%;
                width: 93%;
                padding: 25px 20px;
            }

            .dashboard-container {
                grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
                gap: 18px;
            }

            .card {
                min-height: 120px;
                padding: 20px;
            }
        }

        @media (max-width: 768px) {
            .mainpage {
                left: 0;
                width: 100%;
                border-radius: 0;
                padding: 20px 15px;
                height: auto;
                min-height: calc(100vh - 62px);
            }

            .dashboard-container {
                grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
                gap: 15px;
            }

            .card {
                min-height: 110px;
                padding: 18px;
            }

            .card-icon {
                font-size: 32px;
                margin-bottom: 12px;
            }

            .card-value {
                font-size: 22px;
            }

            .actions-grid {
                grid-template-columns: 1fr;
                gap: 12px;
            }
        }

        @media (max-width: 480px) {
            .mainpage {
                padding: 15px 12px;
            }

            .dashboard-container {
                grid-template-columns: 1fr;
                gap: 12px;
            }

            .card {
                min-height: 100px;
                padding: 15px;
            }

            .card-icon {
                font-size: 28px;
                margin-bottom: 10px;
            }

            .card-value {
                font-size: 20px;
            }

            .card-subtitle {
                font-size: 14px;
            }

            .page-title {
                font-size: 24px;
            }
        }

        @media (max-width: 360px) {
            .mainpage {
                padding: 12px 10px;
            }

            .card {
                min-height: 90px;
                padding: 12px;
            }

            .card-icon {
                font-size: 24px;
                margin-bottom: 8px;
            }

            .card-value {
                font-size: 18px;
            }

            .card-subtitle {
                font-size: 13px;
            }
        }

        /* Loading Animation */
        .card {
            animation: cardSlideIn 0.6s ease forwards;
        }

        @keyframes cardSlideIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Stagger animation for cards */
        .card:nth-child(1) { animation-delay: 0.1s; }
        .card:nth-child(2) { animation-delay: 0.2s; }
        .card:nth-child(3) { animation-delay: 0.3s; }
        .card:nth-child(4) { animation-delay: 0.4s; }
        .card:nth-child(5) { animation-delay: 0.5s; }
        .card:nth-child(6) { animation-delay: 0.6s; }
        .card:nth-child(7) { animation-delay: 0.7s; }
    </style>
</head>

<body>
    <div class="maindiv">
        <div class="navbar">
            <%- include('../partials/navbar') %>
        </div>
        
        <div class="mainpage">
            <div class="page-header">
                <h1 class="page-title">
                    <i class="fas fa-chart-line"></i>
                    Admin Dashboard
                </h1>
                <p class="page-subtitle">Overview of your car rental business performance</p>
            </div>

            <div class="dashboard-container">
                <div class="card users">
                    <i class="fas fa-users card-icon"></i>
                    <div class="card-title">Registered Users</div>
                    <div class="card-value"><%= totalUsers %></div>
                    <div class="card-subtitle">Total Customers</div>
                </div>

                <div class="card vehicles">
                    <i class="fas fa-car-side card-icon"></i>
                    <div class="card-title">Total Vehicles</div>
                    <div class="card-value"><%= totalVehicles %></div>
                    <div class="card-subtitle">Fleet Size</div>
                </div>

                <div class="card bookings">
                    <i class="fas fa-calendar-check card-icon"></i>
                    <div class="card-title">Total Bookings</div>
                    <div class="card-value"><%= totalbooking %></div>
                    <div class="card-subtitle">All Time</div>
                </div>

                <div class="card revenue">
                    <i class="fas fa-sack-dollar card-icon"></i>
                    <div class="card-title">Total Revenue</div>
                    <div class="card-value">₹<%= totalAmount %></div>
                    <div class="card-subtitle">Booking Amount</div>
                </div>

                <div class="card pending">
                    <i class="fas fa-hourglass-half card-icon"></i>
                    <div class="card-title">Pending Bookings</div>
                    <div class="card-value"><%= totalpending %></div>
                    <div class="card-subtitle">Awaiting Confirmation</div>
                </div>

                <div class="card confirmed">
                    <i class="fas fa-circle-check card-icon"></i>
                    <div class="card-title">Confirmed Bookings</div>
                    <div class="card-value"><%= totalconform %></div>
                    <div class="card-subtitle">Active Rentals</div>
                </div>

                <div class="card cancelled">
                    <i class="fas fa-ban card-icon"></i>
                    <div class="card-title">Cancelled Bookings</div>
                    <div class="card-value"><%= totalcancel %></div>
                    <div class="card-subtitle">Cancelled Orders</div>
                </div>
            </div>

            <div class="quick-actions">
                <h3 class="quick-actions-title">Quick Actions</h3>
                <div class="actions-grid">
                    <a href="/admin/addvehicle" class="action-btn">
                        <i class="fas fa-plus"></i>
                        Add Vehicle
                    </a>
                    <a href="/admin/vehiclelist" class="action-btn">
                        <i class="fas fa-list"></i>
                        View Vehicles
                    </a>
                    <a href="/admin/clients" class="action-btn">
                        <i class="fas fa-users"></i>
                        View Clients
                    </a>
                    <a href="/admin/Bookings" class="action-btn">
                        <i class="fas fa-calendar"></i>
                        Manage Bookings
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Add loading animation on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        // Observe all cards
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.card');
            cards.forEach(card => {
                observer.observe(card);
            });

            // Add click effect to cards
            cards.forEach(card => {
                card.addEventListener('click', function(e) {
                    this.style.transform = 'translateY(-15px) scale(0.98)';
                    setTimeout(() => {
                        this.style.transform = 'translateY(-10px) scale(1)';
                    }, 150);
                });
            });
        });

        // Format numbers with commas
        function formatNumbers() {
            const values = document.querySelectorAll('.card-value');
            values.forEach(value => {
                const text = value.textContent;
                const number = text.match(/\d+/);
                if (number) {
                    const formatted = parseInt(number[0]).toLocaleString();
                    value.textContent = text.replace(number[0], formatted);
                }
            });
        }

        // Initialize formatting
        formatNumbers();
    </script>
</body>

</html>
