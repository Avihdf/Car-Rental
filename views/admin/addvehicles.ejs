<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Vehicle - Driven Admin</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: 'Quicksand', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .maindiv {
            display: flex;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            overflow: hidden;
            min-height: 100vh;
            flex-direction: column;
        }

        .navbar {
            width: 100%;
        }

        /* Message Container */
        .message-container {
            position: fixed;
            top: 72px;
            left: 50%;
            transform: translateX(-50%);
            max-width: 600px;
            width: 90%;
            background: rgba(72, 187, 120, 0.95);
            backdrop-filter: blur(15px);
            color: white;
            padding: 15px 25px;
            border-radius: 15px;
            font-weight: 600;
            font-size: 16px;
            z-index: 1100;
            box-shadow: 0 8px 25px rgba(72, 187, 120, 0.4);
            display: flex;
            justify-content: space-between;
            align-items: center;
            animation: slideDown 0.4s ease-out;
        }

        .message-container.error {
            background: rgba(229, 62, 62, 0.95);
            box-shadow: 0 8px 25px rgba(229, 62, 62, 0.4);
        }

        .message-container .close-btn {
            background: none;
            border: none;
            color: white;
            font-size: 20px;
            font-weight: 700;
            cursor: pointer;
            padding: 5px;
            border-radius: 50%;
            transition: background 0.3s ease;
        }

        .message-container .close-btn:hover {
            background: rgba(255, 255, 255, 0.2);
        }

        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateX(-50%) translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateX(-50%) translateY(0);
            }
        }

        .mainpage {
            position: absolute;
            top: 62px;
            left: 16.5%;
            width: 82.4%;
            height: calc(99.6vh - 62px);
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 25px 0px 12px 0px;
            overflow-y: auto;
            padding: 40px 30px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.3);
            transition: all 0.3s ease-in-out;
        }

        .mainpage::-webkit-scrollbar {
            width: 8px;
        }

        .mainpage::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 4px;
        }

        .mainpage::-webkit-scrollbar-thumb {
            background: rgba(102, 126, 234, 0.3);
            border-radius: 4px;
        }

        .mainpage::-webkit-scrollbar-thumb:hover {
            background: rgba(102, 126, 234, 0.5);
        }

        /* Page Header */
        .page-header {
            text-align: center;
            margin-bottom: 40px;
            padding-bottom: 25px;
            border-bottom: 2px solid rgba(102, 126, 234, 0.1);
        }

        .page-title {
            font-size: clamp(24px, 4vw, 36px);
            font-weight: 700;
            color: #2d3748;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
        }

        .page-subtitle {
            color: #718096;
            font-size: 16px;
            font-weight: 500;
        }

        /* Form Styling */
        .vehicle-form {
            max-width: 800px;
            margin: 0 auto;
        }

        .form-section {
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.5);
        }

        .section-title {
            font-size: 20px;
            font-weight: 700;
            color: #2d3748;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .section-title i {
            color: #667eea;
        }

        .form-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .form-label {
            font-weight: 600;
            color: #4a5568;
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .form-label i {
            color: #667eea;
            font-size: 16px;
        }

        /* Input Styling */
        input[type="text"],
        input[type="email"],
        input[type="password"],
        input[type="number"],
        select,
        textarea {
            width: 100%;
            padding: 15px 18px;
            border: 2px solid rgba(102, 126, 234, 0.2);
            border-radius: 12px;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(5px);
            font-size: 16px;
            font-family: 'Quicksand', sans-serif;
            color: #2d3748;
            transition: all 0.3s ease;
        }

        input:focus,
        select:focus,
        textarea:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            background: white;
            transform: translateY(-2px);
        }

        input:valid,
        select:valid {
            border-color: #48bb78;
        }

        /* File Upload Section */
        .file-upload-section {
            margin-bottom: 30px;
        }

        .file-upload-group {
            display: flex;
            flex-direction: column;
            gap: 15px;
            margin-bottom: 20px;
        }

        .file-input-wrapper {
            position: relative;
            background: rgba(102, 126, 234, 0.05);
            border: 2px dashed rgba(102, 126, 234, 0.3);
            border-radius: 12px;
            padding: 20px;
            text-align: center;
            transition: all 0.3s ease;
        }

        .file-input-wrapper:hover {
            border-color: #667eea;
            background: rgba(102, 126, 234, 0.1);
        }

        input[type="file"] {
            width: 100%;
            padding: 10px;
            background: transparent;
            border: none;
            font-size: 14px;
        }

        .add-file-btn {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 12px 20px;
            background: linear-gradient(135deg, #48bb78, #38a169);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            align-self: flex-start;
        }

        .add-file-btn:hover {
            background: linear-gradient(135deg, #38a169, #2f855a);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(72, 187, 120, 0.3);
        }

        /* Accessories Section */
        .accessories-section {
            margin-bottom: 30px;
        }

        .accessories-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 15px;
            margin-top: 20px;
        }

        .accessory-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 15px;
            background: rgba(255, 255, 255, 0.8);
            border-radius: 12px;
            border: 2px solid rgba(102, 126, 234, 0.1);
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .accessory-item:hover {
            border-color: #667eea;
            background: rgba(102, 126, 234, 0.05);
            transform: translateY(-2px);
        }

        .accessory-item input[type="checkbox"] {
            width: 20px;
            height: 20px;
            accent-color: #667eea;
            cursor: pointer;
        }

        .accessory-item label {
            font-size: 15px;
            font-weight: 500;
            color: #4a5568;
            cursor: pointer;
            margin: 0;
        }

        /* Action Buttons */
        .form-actions {
            display: flex;
            gap: 20px;
            justify-content: center;
            margin-top: 40px;
        }

        .btn,
        .cancel-btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 15px 30px;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 600;
            font-family: 'Quicksand', sans-serif;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .btn {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
        }

        .btn:hover {
            background: linear-gradient(135deg, #5a67d8, #667eea);
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(102, 126, 234, 0.4);
        }

        .cancel-btn {
            background: linear-gradient(135deg, #718096, #4a5568);
            color: white;
        }

        .cancel-btn:hover {
            background: linear-gradient(135deg, #4a5568, #2d3748);
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(113, 128, 150, 0.4);
        }

        /* Loading State */
        .btn.loading {
            position: relative;
            color: transparent;
        }

        .btn.loading::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 20px;
            height: 20px;
            margin: -10px 0 0 -10px;
            border: 2px solid transparent;
            border-top: 2px solid white;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Responsive Design */
        @media (max-width: 1200px) {
            .mainpage {
                left: 20%;
                width: 78%;
                padding: 30px 25px;
            }

            .message-container {
                left: 50%;
                width: 70%;
            }
        }

        @media (max-width: 1024px) {
            .mainpage {
                left: 5%;
                width: 93%;
                padding: 25px 20px;
            }

            .message-container {
                left: 50%;
                width: 85%;
            }

            .form-row {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 768px) {
            .mainpage {
                left: 0;
                width: 100%;
                border-radius: 0;
                padding: 20px 15px;
                height: auto;
                min-height: calc(100vh - 62px);
            }

            .message-container {
                left: 50%;
                width: 95%;
                top: 68px;
            }

            .form-section {
                padding: 20px 15px;
            }

            .accessories-grid {
                grid-template-columns: 1fr;
            }

            .form-actions {
                flex-direction: column;
                align-items: center;
            }

            .btn,
            .cancel-btn {
                width: 100%;
                justify-content: center;
            }
        }

        @media (max-width: 480px) {
            .mainpage {
                padding: 15px 10px;
            }

            .page-title {
                font-size: 24px;
            }

            .form-section {
                padding: 15px;
            }

            input,
            select,
            textarea {
                font-size: 16px;
                padding: 12px 15px;
            }

            .btn,
            .cancel-btn {
                font-size: 14px;
                padding: 12px 20px;
            }

            .accessories-grid {
                grid-template-columns: 1fr;
                gap: 10px;
            }

            .accessory-item {
                padding: 12px;
            }
        }

        @media (max-width: 320px) {
            .mainpage {
                padding: 12px 8px;
            }

            .form-section {
                padding: 12px;
            }
        }
    </style>
</head>

<body>
    <div class="maindiv">
        <div class="navbar">
            <%- include('../partials/navbar') %>
        </div>

        <% if (typeof msg !== 'undefined' && msg) { %>
            <div class="message-container" id="messageContainer">
                <span><i class="fas fa-check-circle"></i> <%= msg %></span>
                <button class="close-btn" onclick="closeMessage()">&times;</button>
            </div>
        <% } %>

        <div class="mainpage">
            <div class="page-header">
                <h1 class="page-title">
                    <i class="fas fa-plus-circle"></i>
                    Add New Vehicle
                </h1>
                <p class="page-subtitle">Add a new vehicle to your fleet inventory</p>
            </div>

            <form class="vehicle-form" action="/admin/addvehicle" method="post" enctype="multipart/form-data" id="vehicleForm">

                <!-- Basic Information Section -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-info-circle"></i>
                        Basic Information
                    </h3>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-tags"></i>
                                Brand
                            </label>
                            <div id="brand-container"></div>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-car"></i>
                                Car Name
                            </label>
                            <input type="text" name="name" placeholder="Enter car model name" required>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-hashtag"></i>
                                Vehicle Number
                            </label>
                            <input type="text" name="vehiclenumber" placeholder="Enter vehicle registration number" required>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-calendar"></i>
                                Year
                            </label>
                            <select name="year" id="year" required>
                                <option value="">--Select Year--</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Technical Specifications -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-cogs"></i>
                        Technical Specifications
                    </h3>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-gas-pump"></i>
                                Fuel Type
                            </label>
                            <div id="fuel-container"></div>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-gear"></i>
                                Transmission Mode
                            </label>
                            <div id="mode-container"></div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-users"></i>
                                Seating Capacity
                            </label>
                            <input type="text" name="seating" placeholder="Enter seating capacity" required>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-map-marker-alt"></i>
                                Location
                            </label>
                            <div id="location-container"></div>
                        </div>
                    </div>
                </div>

                <!-- Pricing & Description -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-rupee-sign"></i>
                        Pricing & Description
                    </h3>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-rupee-sign"></i>
                                Price per Day
                            </label>
                            <input type="number" name="price" placeholder="Enter price per day" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-align-left"></i>
                            Vehicle Description
                        </label>
                        <textarea name="description" rows="4" placeholder="Enter detailed description of the vehicle" required></textarea>
                    </div>
                </div>

                <!-- Image Upload -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-images"></i>
                        Vehicle Images
                    </h3>
                    
                    <div id="file-container" class="file-upload-group">
                        <div class="file-input-wrapper">
                            <i class="fas fa-cloud-upload-alt" style="font-size: 24px; color: #667eea; margin-bottom: 10px;"></i>
                            <input type="file" name="images[]" accept="image/*" required>
                            <p style="margin: 0; color: #718096; font-size: 14px;">Choose vehicle image</p>
                        </div>
                    </div>
                    <button type="button" onclick="addFileInput()" class="add-file-btn">
                        <i class="fas fa-plus"></i>
                        Add More Images
                    </button>
                </div>

                <!-- Accessories -->
                <div class="form-section accessories-section">
                    <h3 class="section-title">
                        <i class="fas fa-list-check"></i>
                        Vehicle Accessories & Features
                    </h3>
                    <div id="accessories-container" class="accessories-grid"></div>
                </div>

                <!-- Action Buttons -->
                <div class="form-actions">
                    <a href="/admin/dashboard" class="cancel-btn">
                        <i class="fas fa-times"></i>
                        Cancel
                    </a>
                    <button type="submit" class="btn" id="submitBtn">
                        <i class="fas fa-plus"></i>
                        Add Vehicle
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        // All your existing JavaScript functions
        const brandOptions = ['Maruti Suzuki', 'Hyundai', 'Tata Motors', 'Mahindra', 'Toyota'];
        const fuelOptions = ['Petrol', 'Diesel', 'CNG', 'EV'];
        const mode = ['Manual', 'Semi-Automatic', 'Automatic'];
        const locationOptions = ['New Delhi', 'Mumbai', 'Chennai', 'Goa', 'Leh & Ladakh', 'Gurugram', 'Noida'];
        const accessories = [
            "Air Conditioner", "Power Door Locks", "AntiLock Braking System",
            "Brake Assist", "Power Steering", "Driver Airbag", "Passenger Airbag",
            "Power Window", "CD Player", "Central Lock", "Crash Sensor"
        ];

        function createDropdown(containerId, options, name, placeholder) {
            const container = document.getElementById(containerId);
            const select = document.createElement('select');
            select.name = name;
            select.required = true;
            
            const defaultOption = document.createElement('option');
            defaultOption.value = '';
            defaultOption.text = placeholder;
            defaultOption.disabled = true;
            defaultOption.selected = true;
            select.appendChild(defaultOption);

            options.forEach(option => {
                const opt = document.createElement('option');
                opt.value = option;
                opt.textContent = option;
                select.appendChild(opt);
            });

            container.appendChild(select);
        }

        function generateYearOptions() {
            const yearSelect = document.getElementById("year");
            const currentYear = new Date().getFullYear();
            for (let y = currentYear; y >= 1990; y--) {
                const option = document.createElement("option");
                option.value = y;
                option.textContent = y;
                yearSelect.appendChild(option);
            }
        }

        function generateAccessories() {
            const container = document.getElementById("accessories-container");
            accessories.forEach(item => {
                const div = document.createElement("div");
                div.className = "accessory-item";
                
                const input = document.createElement("input");
                input.type = "checkbox";
                input.name = "access[]";
                input.value = `{${item}}`;
                input.id = `acc_${item.replace(/\s+/g, '_')}`;
                
                const label = document.createElement("label");
                label.textContent = item;
                label.setAttribute('for', input.id);
                
                div.appendChild(input);
                div.appendChild(label);
                container.appendChild(div);
            });
        }

        function addFileInput() {
            const container = document.getElementById('file-container');
            const wrapper = document.createElement('div');
            wrapper.className = 'file-input-wrapper';
            
            const icon = document.createElement('i');
            icon.className = 'fas fa-cloud-upload-alt';
            icon.style.cssText = 'font-size: 24px; color: #667eea; margin-bottom: 10px;';
            
            const input = document.createElement('input');
            input.type = 'file';
            input.name = 'images[]';
            input.accept = 'image/*';
            
            const text = document.createElement('p');
            text.textContent = 'Choose additional image';
            text.style.cssText = 'margin: 0; color: #718096; font-size: 14px;';
            
            wrapper.appendChild(icon);
            wrapper.appendChild(input);
            wrapper.appendChild(text);
            container.appendChild(wrapper);
        }

        function closeMessage() {
            const messageContainer = document.getElementById('messageContainer');
            if (messageContainer) {
                messageContainer.style.animation = 'slideUp 0.4s ease-out forwards';
                setTimeout(() => {
                    messageContainer.remove();
                }, 400);
            }
        }

        // Auto-close message after 5 seconds
        setTimeout(() => {
            closeMessage();
        }, 5000);

        // Form submission with loading state
        document.getElementById('vehicleForm').addEventListener('submit', function() {
            const submitBtn = document.getElementById('submitBtn');
            submitBtn.classList.add('loading');
            submitBtn.disabled = true;
        });

        // Initialize everything when page loads
        window.onload = () => {
            createDropdown('brand-container', brandOptions, 'brand', '-- Select Brand --');
            createDropdown('fuel-container', fuelOptions, 'fuel', '-- Select Fuel Type --');
            createDropdown('mode-container', mode, 'mode', '-- Select Transmission --');
            createDropdown('location-container', locationOptions, 'location', '-- Select Location --');
            generateYearOptions();
            generateAccessories();
        };

        // Add slideUp animation
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideUp {
                from {
                    opacity: 1;
                    transform: translateX(-50%) translateY(0);
                }
                to {
                    opacity: 0;
                    transform: translateX(-50%) translateY(-20px);
                }
            }
        `;
        document.head.appendChild(style);
    </script>
</body>

</html>
